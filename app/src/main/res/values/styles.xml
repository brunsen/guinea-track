<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textViewStyle">@style/Primary_Text_Style</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- Theme customizations available in newer API levels can go in res/values-vXX/styles.xml,
         while customizations related to backward-compatibility can go here. -->
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/primary_color</item>
        <item name="android:textColorPrimary">@color/toolbar_title</item>
        <item name="android:textColorSecondary">@color/toolbar_subtitle</item>
        <item name="android:itemTextAppearance">@style/PopUpMenuTextAppearance</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="Primary_Text_Style" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Secondary_Text_Style" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="AlertDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/accent_color</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/text_color_primary</item>

        <item name="android:background">@color/background</item>
    </style>

    <style name="PopUpMenuTextAppearance" parent="Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/toolbar_title</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-4.0dip</item>
    </style>

</resources>
