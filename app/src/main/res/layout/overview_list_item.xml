<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/background"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/list_item_image_width"
        android:layout_height="@dimen/list_item_image_height"
        android:layout_marginTop="@dimen/list_vertical_spacing">

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:riv_corner_radius="30dip"
            android:src="@color/primary_color"
            app:riv_oval="false" />

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/overview_list_item_image"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:riv_corner_radius="30dip"
            app:riv_oval="false" />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/main_list_side_margin"
        android:layout_marginStart="@dimen/main_list_side_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/list_vertical_spacing"
        android:paddingTop="@dimen/list_vertical_spacing">

        <TextView
            android:id="@+id/overview_list_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="16dp"
            tools:text="Guinea Pig" />

        <TextView
            android:id="@+id/overview_list_item_sub_info"
            style="@style/Secondary_Text_Style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="14dp"
            tools:text="Guinea pig data" />

    </LinearLayout>

</LinearLayout>