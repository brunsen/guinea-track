<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:id="@+id/guinea_pig_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginEnd="@dimen/main_list_side_margin"
        android:layout_marginLeft="@dimen/main_list_side_margin"
        android:layout_marginRight="@dimen/main_list_side_margin"
        android:layout_marginStart="@dimen/main_list_side_margin"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/floating_action_button_margin_bottom"
        android:layout_marginEnd="@dimen/floating_action_button_horizontal_margin"
        android:layout_marginRight="@dimen/floating_action_button_horizontal_margin"
        app:srcCompat="@drawable/plus"/>

</RelativeLayout>